<Window x:Class="WASA.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WASA"
        mc:Ignorable="d"
        Title="Главная" Height="450" Width="800" WindowStartupLocation="CenterScreen" Closing="Window_Closing">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="Sell" Click="Sell_Click" Margin="10" Height="25">Продажа</Button>
            <Button x:Name="Product" Click="Product_Click" Margin="10" Height="25">Товар</Button>
            <Button x:Name="Users" Click="Users_Click" Margin="10" Height="25">Пользователи</Button>
            <Button x:Name="Settings" Click="Settings_Click" Margin="10" IsEnabled="False" Height="25">Настройки</Button>
            <Button x:Name="User_Exit" Click="User_Exit_Click" Background="LightSalmon"  Margin="10" Height="25">Выйти из учётной записи</Button>
            <Button x:Name="Exit" Click="Exit_Click" Background="Salmon" Margin="15" Height="25">Выход</Button>
        </StackPanel>
    </Grid>
</Window>
